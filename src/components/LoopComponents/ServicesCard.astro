---
import Heading from "../Heading";
import { Icon } from "astro-icon/components"; // âœ… correct path

const {
  icon = "fa6-solid:circle-info", // e.g. "fa6-solid:house"
  title = "Service",
  description = "",
  // optional style hooks
  class: className = "",
  iconClass = "text-primary",
  cardClass = "",
} = Astro.props;
---

<article
  class={`bg-light-primary p-10 text-center shadow-xl transition-all duration-200 ${cardClass} ${className}`}
>
  <Icon name={icon} size="56" class={`mx-auto ${iconClass}`} />
  <Heading className="h3 mt-6 text-dark-primary">{title}</Heading>
  <p class="mt-6 text-dark-secondary leading-relaxed text-base">{description}</p>
</article>
