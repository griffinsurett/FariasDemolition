---

<section id="projects" class="relative bg-light-primary">
  <div class="inner-section section-py">
    <!-- Heading -->
    <div class="text-center mb-8">
      <Heading tagName="span" className="h5 font-semibold text-xl text-primary mb-2">
        Projects
      </Heading>
      <Heading tagName="h2" className="text-dark-primary">
        Showcasing Our Success: Faria's Featured Projects
      </Heading>
    </div>

    <!-- Sliders -->
     <div class="grid grid-cols-1 md:grid-cols-2 xl:grid-cols-3 gap-8">
     {projects.map((p, i) => (
       <div class="space-y-3">
         <BeforeAfterSlider
           before={p.before}
           after={p.after}
           title={p.title}
           className="bg-black/5"
           client:visible
         />
       </div>
     ))}
   </div>
  </div>
</section>
