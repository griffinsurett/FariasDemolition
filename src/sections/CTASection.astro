---
import Button from "@/components/Button/Button";
import Heading from "@/components/Heading";

---
<section id="cta" class="bg-secondary section-py">
  <div class="inner-section">
    <div class="flex flex-col md:flex-row items-center md:items-center gap-6 md:gap-8">
      <!-- Copy -->
      <div class="flex-1 text-center md:text-left">
        <Heading tagName="h2" className="text-dark-primary">
          Let’s destroy something together!
        </Heading>
        <p class="mt-4 text-dark-secondary">
          Contact us with what you need done and we’ll get back to you within 2 business days.
        </p>
      </div>

      <!-- CTA Button -->
      <div class="w-full md:w-auto flex justify-center items-center">
        <Button variant="secondary" className="invert">
          Get Quote
        </Button>
      </div>
    </div>
  </div>
</section>
